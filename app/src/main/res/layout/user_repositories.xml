<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetUserRepository">

    <LinearLayout
        android:id="@+id/headerRepositories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBackUsers"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:layout_margin="0pt"
            android:layout_weight="5"
            android:padding="0pt"
            android:textSize="6pt"
            android:text="@string/users"
            android:textColor="#0999aa"
            android:background="#e7dddd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <TextView
            android:id="@+id/titleUserLogin"
            android:layout_width="match_parent"
            android:layout_height="20pt"
            android:textSize="9pt"
            android:layout_weight="2"
            android:background="#e7dddd"
            android:textColor="#01402c"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

    </LinearLayout>

    <ListView
        android:id="@+id/listUserRepositories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerRepositories">

    </ListView>

    <TextView
        android:id="@+id/responseRepos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listUserRepositories">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
